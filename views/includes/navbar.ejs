      <!-- Auth links - Inside hamburger on mobile -->
      <div class="navbar-nav ms-md-auto">
        <a class="nav-link" href="/listings/new">Add new Listing</a>
        <% if(!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign Up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>
  
        <% if(currUser) { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a> 
        <% } %>
      </div>
    </div>
  </div>
</nav>

<!-- Mobile Search Bar - Outside navbar -->
<div class="d-md-none search-mobile-wrapper">
  <div class="container-fluid">
    <form class="d-flex" role="search" action="/listings" method="GET">
      <input 
        class="form-control me-2 search-inp flex-grow-1" 
        type="search" 
        name="search"
        placeholder="Search destinations"
        value="<%= typeof search !== 'undefined' ? search : '' %>"
      />
      <button class="btn search-btn" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>Search
      </button>
    </form>
  </div>
</div>

<script>
  // Close menu when clicking outside on mobile
  document.addEventListener('click', function(event) {
    const navbar = document.querySelector('.navbar');
    const navbarCollapse = document.getElementById('navbarNavAltMarkup');
    const navbarToggler = document.querySelector('.navbar-toggler');
    
    if (window.innerWidth < 768) {
      if (navbarCollapse.classList.contains('show')) {
        if (!navbar.contains(event.target)) {
          navbarToggler.click();
        }
      }
    }
  });
</script>